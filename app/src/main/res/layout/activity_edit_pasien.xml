<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPasienActivity">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/form"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="FORM EDIT DATA PASIEN"/>


            <LinearLayout
                android:id="@+id/form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/title"
                >

                <EditText
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/field_bg"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:hint="Nama Lengkap"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/nomor_tlp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/field_bg"
                    android:inputType="phone"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:hint="Nomor Telepon"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/field_bg"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:inputType="text"
                    android:drawablePadding="8dp"
                    android:hint="Alamat"
                    android:padding="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/field_bg"
                    android:layout_marginBottom="16dp">
                    <Spinner
                        android:id="@+id/spn3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toEndOf="@id/iconSpinner3"
                        />
                    <ImageView
                        android:id="@+id/iconSpinner3"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_baseline_group_24"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/field_bg"
                    android:layout_marginBottom="16dp">
                    <Spinner
                        android:id="@+id/spn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toEndOf="@id/iconSpinner"
                        />
                    <ImageView
                        android:id="@+id/iconSpinner"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_baseline_history_edu_24"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/field_bg"
                    android:layout_marginBottom="16dp">
                    <Spinner
                        android:id="@+id/spn2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toEndOf="@id/iconSpinner2"
                        />
                    <ImageView
                        android:id="@+id/iconSpinner2"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_baseline_date_range_24"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="Simpan" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
